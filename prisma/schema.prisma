// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  status    String   @default("PENDING") // PENDING, CONFIRMED, UNSUBSCRIBED
  token     String   @unique
  metadata  String?  // JSON stringified context (exchange, country, problem)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  plan      String   @default("basic") // basic, advanced, professional
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
